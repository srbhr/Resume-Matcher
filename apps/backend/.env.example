# Example backend environment file (do not commit secrets)
SESSION_SECRET_KEY="CHANGE_ME_SECURE_RANDOM"

# Database (Neon Postgres)
# Either set DATABASE_URL to a single connection string and let the app derive sync/async URLs
# DATABASE_URL="postgresql://user:password@host/db?sslmode=require"
# Or set explicit URLs:
SYNC_DATABASE_URL="postgresql+psycopg://user:password@host/db?sslmode=require"
ASYNC_DATABASE_URL="postgresql+asyncpg://user:password@host/db?ssl=require"

# AI provider (OpenAI recommended for cloud)
LLM_PROVIDER="openai"
LL_MODEL="gpt-5-mini"
EMBEDDING_PROVIDER="openai"
EMBEDDING_MODEL="text-embedding-3-small"

# Keys (never commit real values)
LLM_API_KEY="YOUR_OPENAI_KEY_HERE"
EMBEDDING_API_KEY="YOUR_OPENAI_KEY_HERE"
# OPENAI_API_KEY may also be used as a fallback
# OPENAI_API_KEY="YOUR_OPENAI_KEY_HERE"

# CORS
ALLOWED_ORIGINS='["https://cvita.pro","http://localhost:3000"]'

# Misc
ENV=local
PYTHONDONTWRITEBYTECODE=1

# Clerk (JWT verification in API; optional in Phase 1)
# CLERK_JWT_ISSUER="https://YOUR-CLERK-DOMAIN.clerk.accounts.dev"
# CLERK_AUDIENCE="backend"

# Stripe (server-side only)
# Do NOT put real keys here. Set them in your hosting provider's env vars.
STRIPE_SECRET_KEY="__SET_IN_DEPLOYMENT__"
STRIPE_WEBHOOK_SECRET="__SET_IN_DEPLOYMENT__"
